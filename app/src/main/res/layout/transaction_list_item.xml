<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/list_item_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="4dp"
                android:layout_weight="1"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/from_user_image_view"
                    android:src="@drawable/male"
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:transitionName="dp_transition"/>

                <TextView
                    android:id="@+id/transaction_from_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_gravity="center"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_color"
                    android:text="Shreyas Naik"/>

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/right_arrow"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:tint="@color/dark_grey" />

            <LinearLayout
                android:padding="4dp"
                android:layout_weight="1"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/to_user_image_view"
                    android:src="@drawable/female"
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:transitionName="dp_transition"/>

                <TextView
                    android:id="@+id/transaction_to_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_color"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:text="Mary Jane Watson"/>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: "
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:padding="5dp"
                tools:ignore="NestedWeights" />
            <TextView
                android:id="@+id/transaction_amount_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 100 "
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:padding="5dp"
                tools:ignore="NestedWeights" />
            <ImageView
                android:id="@+id/transaction_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_check_24"
                app:tint="@color/green"
                android:layout_weight="1"
                android:padding="5dp"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/date_and_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="1-Jan-2022, 12:00 AM"
        android:textStyle="bold"
        android:layout_weight="1"
        android:paddingRight="20sp"
        android:textAlignment="textEnd"
        tools:ignore="NestedWeights" />

</LinearLayout>