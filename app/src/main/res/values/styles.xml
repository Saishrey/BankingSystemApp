<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AmountInput" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="background">@color/white</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="actionBarStyle">@style/BankAppBarStyle</item>-->
    </style>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="background">@color/main_color</item>
<!--        <item name="actionBarStyle">@style/BankAppBarStyle</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="actionBarStyle">@style/BankAppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- App bar style -->
    <style name="BankAppBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="HomeTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/selector_yellow</item>
        <item name="tabSelectedTextColor">@color/selector_yellow</item>
        <item name="tabTextAppearance">@style/HomeTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="HomeTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
